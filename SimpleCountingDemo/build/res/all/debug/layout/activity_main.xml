<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="@string/count_header_label"
            android:id="@+id/count_label"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Count Value"
            android:id="@+id/count_number"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/count_label"
            android:textStyle="bold"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_button_label"
            android:id="@+id/count_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_label"
            android:id="@+id/inc_dec_switch"
            android:layout_marginTop="25dp"
            android:textOn="+"
            android:textOff="-"
            android:singleLine="false"
            android:layout_below="@+id/count_button"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            />
</RelativeLayout>
